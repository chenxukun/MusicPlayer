<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="7" >
    
<ImageView 
	android:layout_column="1"
	android:layout_row="1"
	android:layout_rowSpan="2"
	android:id="@+id/songIcon"
	android:src="@drawable/musicdisk"
	android:layout_width="80px"
	android:layout_height="80px"
	/>
<TextView 
	android:layout_column="2"
	android:layout_row="1"
	android:layout_width="90dp"
	android:layout_height="40dp"
	android:id="@+id/songName"/>
<TextView
	android:layout_column="2"
	android:layout_row="2"
	android:layout_width="48dp"
	android:layout_height="20dp"
	android:id="@+id/artist"/>
<Button
    android:layout_width="48dp"
    android:layout_height="48dp"
	android:layout_column="3"
	android:layout_row="1"
	android:layout_rowSpan="2"
	android:id="@+id/preSong"
	android:layout_gravity="center_vertical"
	android:background="@drawable/pre"/>
<ToggleButton
    android:layout_width="48dp"
    android:layout_height="48dp"
	android:layout_column="4"
	android:layout_row="1"
	android:layout_rowSpan="2"
	android:id="@+id/pauseResume"
	android:textOff=""
	android:textOn=""
	android:layout_gravity="center_vertical"
	android:background="@drawable/play_pause"/>
<Button
    android:layout_width="48dp"
    android:layout_height="48dp"
	android:layout_column="5"
	android:layout_row="1"
	android:layout_rowSpan="2"
	android:id="@+id/nextSong"
	android:background="@drawable/next"
	android:layout_gravity="center_vertical"/>
<ImageButton
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:padding="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
	android:layout_column="6"
	android:layout_row="1"
	android:layout_rowSpan="2"
	android:id="@+id/playmode"
	android:layout_gravity="center_vertical"/>
<SeekBar
	android:max="100"
	android:layout_row="2"
	android:layout_columnSpan="7"
	android:layout_width="fill_parent"
	android:layout_height="10dp"	
	android:id="@+id/progress"
	android:thumb="@drawable/seekicon"
	/>
</GridLayout>
