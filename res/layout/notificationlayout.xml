<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

		<ImageView
		     android:id="@+id/no_icon"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:layout_weight="1"
             android:background="@drawable/musicdisk"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"/>
		<TextView 
			android:layout_width="120dp"
			android:layout_height="20dp"
			android:id="@+id/no_name"
            android:layout_toRightOf="@id/no_icon"/> 
		<TextView
			android:layout_width="48dp"
			android:layout_height="20dp"
			android:id="@+id/no_artist"
			android:layout_below="@id/no_name"
			android:layout_toRightOf="@id/no_icon"/>    
        <ImageView
             android:id="@+id/no_pre"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:layout_weight="1"
             android:background="@drawable/pre"
             android:layout_toRightOf="@id/no_name"/> 

         <ImageView
             android:id="@+id/no_play"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:layout_weight="1"
             android:textOff=""
			 android:textOn=""
             android:background="@drawable/play"
             android:layout_toRightOf="@id/no_pre"/> 


         <ImageView
             android:id="@+id/no_next"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:layout_weight="1"
             android:background="@drawable/next" 
             android:layout_toRightOf="@id/no_play"/>
</RelativeLayout>
